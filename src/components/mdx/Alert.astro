---
import { cn } from '@/utils'

interface Props {
  type?: 'info' | 'warning' | 'danger' | 'success'
  title?: string
}

const { type = 'info' }: Props = Astro.props

const colorByType = (type: string) => {
  switch (type) {
    case 'info':
      return 'info'
    case 'warning':
      return 'warning'
    case 'danger':
      return 'danger'
    case 'success':
      return 'success'
    default:
      return 'info'
  }
}
---

<aside
  class={cn(
    'font-semibold rounded-xl border shadow-sm dark:border-none dark:ring-1 px-5',
    type && type !== 'info'
      ? `bg-200-${colorByType(type)}`
      : 'dark:bg-gray-900',
  )}
>
  <slot />
</aside>
